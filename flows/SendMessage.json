            }
          }
        },
        "Condition": {
          "actions": {},
          "runAfter": {},
          "else": {
            "actions": {
              "Add_a_new_row": {
                "type": "OpenApiConnection",
                "inputs": {
                  "parameters": {
                    "entityName": "cr_shraga_conversations",
                    "item/cr_direction": "Inbound",
                    "item/cr_mcs_conversation_id": "@triggerBody()?['text_1']",
                    "item/cr_message": "@triggerBody()?['text_2']",
                    "item/cr_status": "Unclaimed",
                    "item/cr_useremail": "@triggerBody()?['text']"
                  },
                  "host": {
                    "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps",
                    "connectionName": "shared_commondataserviceforapps",
                    "operationId": "CreateRecord"
                  },
                  "authentication": "@parameters('$authentication')"
                }
              }
            }
          },
          "expression": {
            "and": [
              {
                "equals": [
                  "@triggerBody()?['boolean']",
                  "@true"
                ]
              }
            ]
          },
          "type": "If"
        },
        "Initialize_variable": {
          "runAfter": {
            "Initialize_responseText": [
              "Succeeded"
            ]
          },
          "type": "InitializeVariable",
          "inputs": {
            "variables": [
              {
                "name": "IsFollowupExpected",
                "type": "string"
              }
            ]
          }
        },
        "Initialize_InboundRowId": {
          "runAfter": {
            "Condition": [
              "Succeeded"
            ]
          },
          "type": "InitializeVariable",
          "inputs": {
            "variables": [
              {
                "name": "InboundRowId",
                "type": "string",
                "value": "@if(not(empty(triggerBody()?['text_3'])), triggerBody()?['text_3'], coalesce(outputs('Add_a_new_row')?['body/cr_shraga_conversationid'], ''))"
              }
            ]
          }
        },
        "Initialize_FilterExpression": {
          "runAfter": {
            "Initialize_InboundRowId": [
              "Succeeded"
            ]
          },
          "type": "InitializeVariable",
          "inputs": {
            "variables": [
              {
                "name": "FilterExpression",
                "type": "string",
                "value": "@if(equals(triggerBody()?['boolean'], true), concat('cr_mcs_conversation_id eq ''', triggerBody()?['text_1'], ''' and cr_direction eq ''Outbound'' and cr_status eq ''Unclaimed'''), concat('cr_in_reply_to eq ''', variables('InboundRowId'), ''' and cr_direction eq ''Outbound'' and cr_status eq ''Unclaimed'''))"
              }
            ]
          }
        }
      },
