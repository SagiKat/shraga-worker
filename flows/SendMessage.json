            ]
          }
        },
        "Wait_for_response": {
          "actions": {
            "List_responses": {
              "type": "OpenApiConnection",
              "inputs": {
                "parameters": {
                  "entityName": "cr_shraga_conversations",
                  "$filter": "@variables('FilterExpression')",
                  "$top": 1,
                  "$orderby": "createdon desc"
                },
                "host": {
                  "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps",
                  "connectionName": "shared_commondataserviceforapps",
                  "operationId": "ListRecords"
                },
                "authentication": "@parameters('$authentication')"
              }
            },
            "Check_if_response_found": {
              "actions": {
                "Set_responseText": {
                  "type": "SetVariable",
                  "inputs": {
                    "name": "responseText",
                    "value": "@first(outputs('List_responses')?['body/value'])?['cr_message']"
                  }
                },
                "Set_variable": {
                  "runAfter": {
                    "Set_responseText": [
                      "Succeeded"
                    ]
                  },
                  "type": "SetVariable",
                  "inputs": {
                    "name": "IsFollowupExpected",
                    "value": "@first(outputs('List_responses')?['body/value'])?['cr_followup_expected']"
                  }
                },
                "Mark_as_delivered": {
                  "runAfter": {
                    "Set_variable": [
                      "Succeeded"
                    ]
                  },
                  "type": "OpenApiConnection",
                  "inputs": {
                    "parameters": {
                      "entityName": "cr_shraga_conversations",
                      "recordId": "@first(outputs('List_responses')?['body/value'])?['cr_shraga_conversationid']",
                      "item/cr_status": "Delivered"
                    },
                    "host": {
                      "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps",
                      "connectionName": "shared_commondataserviceforapps",
                      "operationId": "UpdateRecord"
                    },
                    "authentication": "@parameters('$authentication')"
                  }
                }
              },
              "runAfter": {
                "List_responses": [
                  "Succeeded"
                ]
              },
              "else": {
                "actions": {
                  "Delay_3_seconds": {
                    "type": "Wait",
                    "inputs": {
                      "interval": {
                        "count": 3,
                        "unit": "Second"
                      }
                    }
                  }
                }
              },
              "expression": {
                "and": [
                  {
                    "greater": [
                      "@length(outputs('List_responses')?['body/value'])",
                      0
                    ]
                  }
                ]
              },
              "type": "If"
            }
          },
          "runAfter": {
            "Initialize_variable": [
              "Succeeded"
            ]
          },
          "expression": "@not(equals(variables('responseText'), ''))",
          "limit": {
            "count": 30,
            "timeout": "PT90S"
          },
          "type": "Until"
        },
        "Respond_to_the_agent": {
          "runAfter": {
            "Wait_for_response": [
              "Succeeded",
              "TimedOut"
            ]
          },
          "metadata": {
            "operationMetadataId": "81c94f73-dd52-465c-ad3b-a4686da63cc3"
          },
          "type": "Response",
